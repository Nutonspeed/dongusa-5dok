# Example environment variables for dongusa-5dok
# คัดลอกจากไฟล์นี้เป็น `.env.local` แล้วใส่ค่าแท้จริง (ห้ามคอมมิตความลับ)

# ------------------------
# Required (Supabase - required for local build & health-check)
# ------------------------
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="public-anon-key-placeholder"
NEXT_PUBLIC_USE_SUPABASE=true

# Optional but recommended (for full feature set)
SUPABASE_SERVICE_ROLE_KEY="service-role-key-placeholder"

# ------------------------
# Storage / Blob
# ------------------------
BLOB_READ_WRITE_TOKEN="blob-read-write-token-placeholder"

# ------------------------
# Upstash / Redis (optional)
# ------------------------
KV_REST_API_URL="https://kv.example.com"
KV_REST_API_TOKEN="kv-rest-api-token-placeholder"

# ------------------------
# AI / xAI
# ------------------------
XAI_API_KEY="xai-api-key-placeholder"

# ------------------------
# Stripe / Payments (optional)
# ------------------------
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# ------------------------
# App settings
# ------------------------
ALLOWED_ORIGINS=
QA_BYPASS_AUTH=0

# Optional debug
DEBUG=
