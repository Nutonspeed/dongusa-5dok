// NOTE: No UI restructure. Types/boundary only.
{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "target": "ES2020",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node", "react", "react-dom", "vitest/globals"],
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./*"],
      "@": ["./"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/**/*",
    "lib/**/*",
    "types/**/*",
    "components/**/*",
    "hooks/**/*",
    "contexts/**/*",
    "middleware.ts",
    "middleware-enhanced.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "out",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "scripts/test-*.ts",
    "scripts/*test*.ts",
    "scripts/validate-*.ts",
    "scripts/capacity-planning.ts",
    "scripts/launch-analytics.ts",
    "scripts/performance-validation.ts",
    "scripts/pre-launch-validation.ts",
    "scripts/production-environment-setup.ts",
    "scripts/security-vulnerability-scan.ts"
  ]
}
