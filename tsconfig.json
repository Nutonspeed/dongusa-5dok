{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "target": "ES2020",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node", "react", "react-dom"],
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./*"],
      "@": ["./"]
    }
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "pages/**/*",
    "scripts/**/*",
    "types/**/*",
    "next-env.d.ts"
  ],
  "exclude": ["node_modules", ".next", "dist"]
}
