{
  "name": "sofa-cover-website",
  "version": "1.0.0",
  "private": true,
  "description": "Premium sofa cover e-commerce website with custom ordering system",
  "keywords": [
    "nextjs",
    "ecommerce",
    "sofa-covers",
    "thailand",
    "supabase"
  ],
  "license": "MIT",
  "author": "Your Name <your.email@example.com>",
  "scripts": {
    "build": "next build",
    "build:analyze": "ANALYZE=true npm run build",
    "build:production": "NODE_ENV=production npm run build",
    "build:strict": "SKIP_STRICT_BUILD=false npm run build",
    "clean": "rm -rf .next out dist",
    "clean:all": "rm -rf .next out dist node_modules package-lock.json",
    "db:reset": "tsx scripts/reset-database.ts",
    "db:seed": "tsx scripts/seed-database.ts",
    "db:setup": "tsx scripts/setup-database.ts",
    "dev": "next dev",
    "dev:mock": "ENABLE_MOCK_SERVICES=true npm run dev",
    "dev:reset": "tsx scripts/reset-development.ts",
    "dev:setup": "tsx scripts/setup-development.ts",
    "dev:supabase": "npm run dev",
    "dev:validate": "tsx lib/environment-validator.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "postinstall": "npm run dev:setup",
    "lint": "next lint --no-cache --max-warnings=0",
    "lint:fix": "next lint --fix",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "rc:tag": "node -e \"console.log('v'+new Date().toISOString().slice(0,10))\"",
    "qa:smoke": "tsx scripts/qa-smoke.ts",
    "qa:supabase": "tsx scripts/qa-supabase.ts",
    "typecheck": "pnpm type-check",
    "start": "next start",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:env": "tsx lib/environment-validator.ts",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@radix-ui/react-accordion": "latest",
    "@radix-ui/react-alert-dialog": "latest",
    "@radix-ui/react-aspect-ratio": "latest",
    "@radix-ui/react-avatar": "latest",
    "@radix-ui/react-checkbox": "latest",
    "@radix-ui/react-collapsible": "latest",
    "@radix-ui/react-context-menu": "latest",
    "@radix-ui/react-dialog": "latest",
    "@radix-ui/react-dropdown-menu": "latest",
    "@radix-ui/react-hover-card": "latest",
    "@radix-ui/react-label": "latest",
    "@radix-ui/react-menubar": "latest",
    "@radix-ui/react-navigation-menu": "latest",
    "@radix-ui/react-popover": "latest",
    "@radix-ui/react-progress": "latest",
    "@radix-ui/react-radio-group": "latest",
    "@radix-ui/react-scroll-area": "latest",
    "@radix-ui/react-select": "latest",
    "@radix-ui/react-separator": "latest",
    "@radix-ui/react-slider": "latest",
    "@radix-ui/react-slot": "latest",
    "@radix-ui/react-switch": "latest",
    "@radix-ui/react-tabs": "latest",
    "@radix-ui/react-toast": "latest",
    "@radix-ui/react-toggle": "latest",
    "@radix-ui/react-toggle-group": "latest",
    "@radix-ui/react-tooltip": "latest",
    "@supabase/ssr": "latest",
    "@supabase/supabase-js": "latest",
    "autoprefixer": "^10.4.20",
    "child_process": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "latest",
    "date-fns": "4.1.0",
    "embla-carousel-react": "latest",
    "fs": "latest",
    "geist": "^1.3.1",
    "input-otp": "latest",
    "lucide-react": "^0.454.0",
    "next": "14.2.16",
    "next-themes": "latest",
    "nodemailer": "latest",
    "path": "latest",
    "react": "^18",
    "react-day-picker": "latest",
    "react-dom": "^18",
    "react-hook-form": "latest",
    "react-resizable-panels": "latest",
    "recharts": "latest",
    "sonner": "latest",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "latest",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.16",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.5",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.7.0",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}