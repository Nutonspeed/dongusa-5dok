    "validate:deployment": "tsx scripts/validate-production-deployment.ts",
    "validate:input": "tsx lib/input-validation.ts",
    "validate:modules": "tsx scripts/validate-build-system.ts",
    "verify:all": "npm run verify:system && npm run verify:build",
